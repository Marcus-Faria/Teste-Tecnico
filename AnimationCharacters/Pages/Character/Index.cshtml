@page "{searchString?}"
@model AnimationCharacters.Pages_Character.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Database</h1>

<p>
    <a asp-page="Create">New Register</a>
</p>

<form>
    <p>
        <select asp-for="CtgCharacter" asp-items="Model.Categories" class="rounded p-1 mb-2 bg-dark text-white">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" class="rounded p-1 mb-2 bg-dark text-white" />
        <input type="submit" value="Filter" class="rounded p-1 mb-2 bg-light text-black" />
    </p>
</form>

<table class="table table-dark rounded-top">
    <thead class="table-secondary text-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].TitleMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].NameCharacter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].CategoryCharacter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Scenery)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Character) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleMovie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCharacter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryCharacter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scenery)
            </td>
            <td class="text-primary">
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
