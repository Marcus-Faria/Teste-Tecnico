@page
@model AnimationCharacters.Pages_Character.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Character.TitleMovie" class="control-label"></label>
                <input asp-for="Character.TitleMovie" class="form-control" placeholder="Title Movie" />
                <span asp-validation-for="Character.TitleMovie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.ReleaseDate" class="control-label"></label>
                <input asp-for="Character.ReleaseDate" class="form-control" />
                <span asp-validation-for="Character.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.NameCharacter" class="control-label"></label>
                <input asp-for="Character.NameCharacter" class="form-control" placeholder="Name" />
                <span asp-validation-for="Character.NameCharacter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.CategoryCharacter" class="control-label"></label>
                <fieldset class="row mb-3">
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input asp-for="Character.CategoryCharacter" type="radio" class="form-check-input" value="Protagonist"/>
                            <label class="form-check-label">
                            Protagonist
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Character.CategoryCharacter" type="radio" class="form-check-input" value="Antagonist"/>
                            <label class="form-check-label">
                            Antagonist
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Character.CategoryCharacter" type="radio" class="form-check-input" value="Supporting"/>
                            <label class="form-check-label">
                            Supporting
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <input asp-for="Character.CategoryCharacter" type="radio" class="form-check-input" value="figurant"/>
                            <label class="form-check-label">
                            figurant
                            </label>
                        </div>
                    </div>
                </fieldset>
                <span asp-validation-for="Character.CategoryCharacter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Scenery" class="control-label"></label>
                <input asp-for="Character.Scenery" class="form-control" placeholder="A scenario where the character has a stake" />
                <span asp-validation-for="Character.Scenery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Return List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
